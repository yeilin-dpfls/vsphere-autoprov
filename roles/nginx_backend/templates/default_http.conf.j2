server {
    listen 80;
    server_name {{ inventory_hostname }};
    root /var/www/html/{{ content_name }};
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # 간단한 /health 엔드포인트가 필요하면 아래 추가 가능
    location = /health {
        return 200 'OK';
        add_header Content-Type text/plain;
    }
}
